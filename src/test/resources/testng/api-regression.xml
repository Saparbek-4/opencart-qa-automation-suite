<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="API Regression Suite" parallel="methods" thread-count="2">
    <parameter name="browser" value="chrome"/>

    <listeners>
        <listener class-name="com.opencart.listeners.AllureListener"/>
    </listeners>

    <test name="API Regression Tests">
        <classes>
            <class name="com.opencart.api.runners.RegressionTestRunner"/>
        </classes>
    </test>
</suite>