<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="Full Automation Suite" parallel="tests" thread-count="2">

    <listeners>
        <listener class-name="com.opencart.listeners.AllureListener"/>
    </listeners>

    <!-- UI Tests - Chrome -->
    <test name="UI Tests - Chrome">
        <parameter name="browser" value="chrome"/>
        <groups>
            <run>
                <include name="regression"/>
                <include name="ui"/>
            </run>
        </groups>
        <classes>
            <class name="com.opencart.ui.tests.LoginTest"/>
            <class name="com.opencart.ui.tests.AccountPageTest"/>
            <class name="com.opencart.ui.tests.CartTest"/>
            <class name="com.opencart.ui.tests.HomePageTest"/>
            <class name="com.opencart.ui.tests.ProductPageTest"/>
            <class name="com.opencart.ui.tests.WishListTest"/>
        </classes>
    </test>

    <!-- UI Tests - Firefox -->
    <test name="UI Tests - Firefox">
        <parameter name="browser" value="firefox"/>
        <groups>
            <run>
                <include name="regression"/>
                <include name="ui"/>
            </run>
        </groups>
        <classes>
            <class name="com.opencart.ui.tests.LoginTest"/>
            <class name="com.opencart.ui.tests.AccountPageTest"/>
            <class name="com.opencart.ui.tests.CartTest"/>
            <class name="com.opencart.ui.tests.HomePageTest"/>
            <class name="com.opencart.ui.tests.ProductPageTest"/>
            <class name="com.opencart.ui.tests.WishListTest"/>
        </classes>
    </test>

    <!-- API Tests (runs once, not per browser) -->
    <test name="API Tests">
        <classes>
            <class name="com.opencart.api.runners.CucumberTestRunner"/>
        </classes>
    </test>

</suite>
